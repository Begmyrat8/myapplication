<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="20dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:backgroundTint="#CCD5D6"
    app:cardElevation="5dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/linlay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/word_lang"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.1"
                android:src="@drawable/baseline_cake_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="name" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:text="sum"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:text="weight"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sum" />


                <TextView
                    android:id="@+id/hint_sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:text="sum"
                    android:textColor="#4C4949"
                    app:layout_constraintEnd_toStartOf="@+id/sum"
                    app:layout_constraintStart_toStartOf="@+id/hint_weight"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hint_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:text="weight"
                    android:textColor="#4C4949"

                    app:layout_constraintEnd_toStartOf="@+id/weight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_sum" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageButton
                android:id="@+id/words_fav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete"
                android:tag="0" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
