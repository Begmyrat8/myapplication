<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="20dp"
    android:background="#DDAFA4">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/gram"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_edit_text" />

            <TextView
                android:id="@+id/gram_price"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="gram_price"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gram" />

            <TextView
                android:id="@+id/kg"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="kg"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gram_price" />

            <TextView
                android:id="@+id/price"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="price"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kg" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="sum"
                android:background="#4CAF50"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="weight"
                android:background="#4CAF50"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sum" />


            <TextView
                android:id="@+id/hint_gram"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="gram"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/gram"
                app:layout_constraintStart_toStartOf="@+id/hint_weight"
                app:layout_constraintTop_toBottomOf="@+id/title_edit_text" />

            <TextView
                android:id="@+id/hint_gram_price"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="price"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/kg"
                app:layout_constraintStart_toStartOf="@+id/hint_weight"
                app:layout_constraintTop_toBottomOf="@+id/hint_gram" />

            <TextView
                android:id="@+id/hint_kg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="kg"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/kg"
                app:layout_constraintStart_toStartOf="@+id/hint_weight"
                app:layout_constraintTop_toBottomOf="@+id/hint_gram_price" />

            <TextView
                android:id="@+id/hint_price"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="price"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/price"
                app:layout_constraintStart_toStartOf="@+id/hint_weight"
                app:layout_constraintTop_toBottomOf="@+id/hint_kg" />

            <TextView
                android:id="@+id/hint_sum"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="sum"
                android:background="#4CAF50"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/sum"
                app:layout_constraintStart_toStartOf="@+id/hint_weight"
                app:layout_constraintTop_toBottomOf="@+id/hint_price" />

            <TextView
                android:id="@+id/hint_weight"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="end"
                android:text="weight"
                android:background="#4CAF50"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/weight"
                app:layout_constraintTop_toBottomOf="@+id/hint_sum" />



            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/cake"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toTopOf="@+id/hint_result"
                app:layout_constraintEnd_toStartOf="@+id/hint_gram_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_edit_text" />

            <TextView
                android:id="@+id/hint_result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start|center_vertical"
                android:text="result :"
                android:background="#4CAF50"
                android:textColor="#4C4949"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hint_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hint_price" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>